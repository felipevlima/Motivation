<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.SplashActivity"
        android:background="@drawable/bg_splash">

    <EditText
            android:id="@+id/editName"
            android:layout_width="355dp"
            android:layout_height="65dp"
            android:hint="@string/seu_nome"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.154" android:textColor="@color/colorTextLightGray"
            android:textColorHint="@color/colorTextLightGray" android:background="@drawable/line_et"
            android:padding="15dp" android:inputType="" android:autofillHints=""/>

    <Button
            android:id="@+id/buttonSave"
            android:layout_width="416dp"
            android:layout_height="63dp"
            android:text="@string/salvar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.495" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" android:background="@color/colorAccent"
            android:textColor="@color/colorButton"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp" app:srcCompat="@drawable/motivation_icon"
            android:id="@+id/imageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="112dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="TODO"/>

</android.support.constraint.ConstraintLayout>